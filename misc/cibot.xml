            <feed>http://JENKINS_HOST:8080/jenkins/job/NAME_OF_THE_JOB1/rssAll</feed>
            <feed>http://JENKINS_HOST:8080/jenkins/job/NAME_OF_THE_JOB2/rssAll</feed>
        </feeds>


        <statusMapping status="BUILD_OK">
            <text>aborted</text>
            <text>stabil</text>
